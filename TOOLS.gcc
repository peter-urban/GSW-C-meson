LIBS            = -lm
CDEBUG          = -g
LDEBUG          =
CRELEASE        = -O3
LRELEASE        =
EXTRA_FLAGS     =
CFLAGS          = $(CRELEASE) $(EXTRA_FLAGS)
LFLAGS          = -fPIC -shared $(LRELEASE) $(EXTRA_FLAGS)
OUT             = -o
RM              = rm -f
CP              = cp
CC              = gcc
X               =
O               = .o
SHARED_POSTFIX  = .so

# If you want to use a different compiler (e.g clang), you can set the CC variable
# using e.g. make CC=clang-cl.
